<HomeScreen>:
    FloatLayout:
        MDTextFieldRound:
            id: tf_search
            top_hint_search: .96
            pos_hint: {"top": self.top_hint_search}
            size_hint_y: .06
            hint_text: app.tr._("Search")
            font_size: dp(20)
            icon_left: "magnify"
            normal_color: app.theme_cls.primary_color
            on_text: app.search_text_changed(self.text.strip())
        HomeToolbar:
            id: tb_home
        GridLayout:
            id: container
            cols: 1
            size_hint_y: .87
            top_hint_container: .9
            pos_hint: {"top": self.top_hint_container}
#            pos_hint: {"top": .84}
            ScrollView:
                MDList:
                    id: dampers_container
