<HomeScreen>:
    FloatLayout:
        MDTextFieldRound:
            id: tf_search
            top_hint_search: .96
            pos_hint: {"top": self.top_hint_search}
            size_hint_y: .06
            hint_text: "Search"
            font_size: dp(20)
            icon_left: "magnify"
            normal_color: app.theme_cls.primary_color
            on_text: app.search_text_changed(self.text.strip())
        MyToolbar:
            title: "Dampers"
            pos_hint: {"top": 1}
            size_hint_y: .1
            right_action_items:
                [\
                ["magnify", lambda x: app.hide_search() if app.is_search_focused else app.show_search()],\
                ["sort-variant", lambda x: MDDropdownMenu(items=app.sort_menu_items, width_mult=4).open(self)],\
                ["dots-vertical", lambda x: MDDropdownMenu(items=app.toolbar_menu_items, width_mult=4).open(self)]\
                ]
            left_action_items:
                [["menu", lambda x: None]]
        GridLayout:
            id: container
            cols: 1
            top_hint_container: .9
            pos_hint: {"top": self.top_hint_container}
#            pos_hint: {"top": .84}
            ScrollView:
                MDList:
                    id: dampers_container
