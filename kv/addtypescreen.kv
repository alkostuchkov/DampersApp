<AddTypeScreen>:
    tf_type: tf_type
    # My my_font_size variable.
    my_font_size: dp(25)

    BoxLayout:
        orientation: "vertical"
        AddEditToolbar:
            id: tb_addedit
            toolbar_title: app.tr._("Add damper type")
        GridLayout:
            cols: 1
            padding: dp(7)
            spacing: dp(15)
            MDTextField:
                id: tf_type
                hint_text: app.tr._("Type of damper")
                required: True
                helper_text: app.tr._("Can't be empty")
                helper_text_mode: "on_error"
                font_size: root.my_font_size
            FloatLayout:
                MDRaisedButton:
                    pos_hint: {"center_x": .5, "top": 1}
                    text: app.tr._("Add")
                    size_hint: .8, .15
                    on_release:
                        root.add_type(tf_type.text.strip())
