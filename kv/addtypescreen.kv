<AddTypeToolbar@MyToolbar>:
    MDIconButton:
        id: ibtn_menu
        icon: "arrow-left"
        pos_hint: {"center_y": .5}
        on_release: app.change_screen("home_screen")
    MDLabel:
        text: "Add damper type"
        pos_hint: {"center_y": .5}
        size_hint_x: None
        width: self.texture_size[0]
        text_size: None, None
        font_style: 'H6'

<AddTypeScreen>:
    tf_type: tf_type

    BoxLayout:
        orientation: "vertical"
        AddTypeToolbar:
            id: tb_addtype
        GridLayout:
            cols: 1
            padding: dp(7)
            spacing: dp(5)
            MDTextField:
                id: tf_type
                hint_text: "Type of damper"
                required: True
                helper_text: "Can't be empty"
                helper_text_mode: "on_error"
            FloatLayout:
                spacing: dp(3)
                MDRaisedButton:
                    pos_hint: {"right": .45, "top": 1}
                    text: "Add"
                    on_release:
                        root.add_type(tf_type.text.strip())
                MDRaisedButton:
                    pos_hint: {"x": .55, "top": 1}
                    text: "Cancel"
                    on_release: app.change_screen("home_screen")