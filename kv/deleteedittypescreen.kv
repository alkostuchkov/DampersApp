<DeleteEditTypeScreen>:
    types_container: types_container

    BoxLayout:
        orientation: "vertical"
        MyToolbar:
            size_hint_y: .1
            title: "Delete/Edit type"
            right_action_items:
                [["dots-vertical", lambda x: MDDropdownMenu(items=root.toolbar_menu_items, width_mult=4).open(self)]]
            left_action_items:
                [["arrow-left", lambda x: app.change_screen("home_screen")]]
        GridLayout:
            cols: 1
            ScrollView:
                MDList:
                    id: types_container
